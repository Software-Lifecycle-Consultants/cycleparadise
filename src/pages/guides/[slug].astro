  <section class="relative">
    <!-- Hero Image -->
    <div class="aspect-w-16 aspect-h-6">
      <img 
        src={heroImage} 
        alt={guideData.title}
        class="w-full h-96 lg:h-[500px] object-cover"
        loading="eager"
