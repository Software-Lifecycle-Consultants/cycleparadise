---
import Layout from '../../layouts/Layout.astro';
import { cyclingGuideRepository } from '../../lib/db/repositories/cycling-guides.js';
import {
  getFallbackGuideBySlug,
  getFallbackGuideSlugs,
  getRelatedFallbackGuides
} from '../../data/fallback-cycling-guides.ts';
import type { CyclingGuide } from '../../types/models.js';

const databaseUrl = typeof process !== 'undefined' ? process.env?.DATABASE_URL : undefined;
const databaseAvailable = Boolean(databaseUrl);

export async function getStaticPaths() {
  const runtimeDatabaseUrl = typeof process !== 'undefined' ? process.env?.DATABASE_URL : undefined;
  const hasDatabaseConnection = Boolean(runtimeDatabaseUrl);

  if (hasDatabaseConnection) {
    try {
      const result = await cyclingGuideRepository.findMany({ limit: 100 });
      const guides = Array.isArray(result) ? result : result.guides ?? [];
      if (guides.length > 0) {
        return guides.map((guide) => ({
          params: { slug: guide.slug },
        }));
      }
    } catch (error) {
      console.error('Error generating guide static paths:', error);
    }
  }
  return getFallbackGuideSlugs().map((slug) => ({ params: { slug } }));
}

// Get the guide slug from the URL
const { slug } = Astro.params;

if (!slug) {
  throw new Error('Guide slug is required');
}

// Fetch the guide data
let guideData: CyclingGuide | null = null;
let relatedGuides: CyclingGuide[] = [];
let usingFallbackData = false;

if (databaseAvailable) {
  try {
    guideData = await cyclingGuideRepository.findBySlug(slug);

    if (guideData) {
      const related = await cyclingGuideRepository.findMany({
        region: guideData.region,
        limit: 4
      });
      const relatedList = Array.isArray(related) ? related : related.guides ?? [];
      relatedGuides = relatedList.filter((g) => g.slug !== guideData.slug).slice(0, 3);
    }
  } catch (error) {
    console.error('Failed to load guide:', error);
  }
}

if (!guideData) {
  guideData = getFallbackGuideBySlug(slug) as CyclingGuide | null;
  usingFallbackData = Boolean(guideData);
}

if (!guideData) {
  return Astro.redirect('/guides', 404);
}

if (usingFallbackData || relatedGuides.length === 0) {
  relatedGuides = getRelatedFallbackGuides(guideData.slug, guideData.region, 3);
}

const ensureArray = <T = any>(value: any): T[] => {
  if (!value) return [];
  if (Array.isArray(value)) return value as T[];
  if (typeof value === 'string') {
    try {
      const parsed = JSON.parse(value);
      return Array.isArray(parsed) ? (parsed as T[]) : [];
    } catch (error) {
      return [];
    }
  }
  if (typeof value === 'object') {
    if (Array.isArray((value as any).items)) return (value as any).items as T[];
    if (Array.isArray((value as any).value)) return (value as any).value as T[];
    if (Array.isArray((value as any).data)) return (value as any).data as T[];
  }
  return [];
};

const difficultyLevel = guideData.difficultyLevel || 'INTERMEDIATE';
const highlightList = ensureArray<string>(guideData.highlights);
const safetyTips = ensureArray<string>(guideData.safetyTips);
const nearbyAttractions = ensureArray<string>(guideData.nearbyAttractions);
const galleryImages = ensureArray<string>(guideData.images);
const routeSegments = ensureArray<{ title: string; distance?: string; description?: string }>(guideData.routeSegments);
const hydrationStops = ensureArray<{ name: string; type: string; notes?: string }>(guideData.hydrationStops);
const gearChecklist = ensureArray<string>(guideData.gearChecklist);
const faqItems = ensureArray<{ question: string; answer: string }>(guideData.faqs);
const heroImage = galleryImages[0] || '/images/default-route.jpg';
const siteUrl = 'https://cycleparadise.lk';
const canonicalUrl = `${siteUrl}/guides/${guideData.slug}`;
const heroImageAbsolute = heroImage.startsWith('http') ? heroImage : `${siteUrl}${heroImage}`;
const startingPoint = (guideData as any).startingPoint || 'Flexible meet-up point';
const endingPoint = (guideData as any).endingPoint || 'Returns to base';
const bestTimeToVisit = guideData.bestTimeToVisit || guideData.bestSeason || 'Seasonal availability';
const distanceLabel = guideData.estimatedDistance ? `${guideData.estimatedDistance} km` : 'Distance varies';
const durationLabel = guideData.estimatedDuration || 'Flexible duration';
const terrainLabel = guideData.terrainType || 'Mixed terrain';
const getGuideThumbnail = (guide: CyclingGuide) => {
  const images = ensureArray<string>(guide.images);
  return images[0] || '/images/default-route.jpg';
};

// Helper function to get difficulty badge color
function getDifficultyColor(level: string): string {
  switch (level) {
    case 'EASY': return 'bg-green-100 text-green-800';
    case 'INTERMEDIATE': return 'bg-yellow-100 text-yellow-800';
    case 'CHALLENGING': return 'bg-red-100 text-red-800';
    default: return 'bg-gray-100 text-gray-800';
  }
}

// Generate structured data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": guideData.title,
  "description": guideData.description,
  "image": heroImageAbsolute,
  "url": canonicalUrl,
  "author": {
    "@type": "Organization",
    "name": "Cycle Paradise"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Cycle Paradise",
    "logo": {
      "@type": "ImageObject",
      "url": `${siteUrl}/images/logo.png`
    }
  },
  "datePublished": guideData.createdAt?.toISOString() || new Date().toISOString(),
  "dateModified": guideData.updatedAt?.toISOString() || new Date().toISOString(),
  "articleSection": "Cycling Guides",
  "keywords": [
    guideData.title,
    `${guideData.region} cycling`,
    `${difficultyLevel} cycling route`,
    'cycling guide',
    'Sri Lanka cycling',
    'bicycle route'
  ].join(', '),
  "about": {
    "@type": "Place",
    "name": guideData.region,
  "description": `${difficultyLevel} level cycling route in ${guideData.region}`
  },
  "hasPart": routeSegments.length
    ? routeSegments.map((segment) => ({
        "@type": "TouristAttraction",
        "name": segment.title,
        "description": segment.description,
        "distance": segment.distance
      }))
    : undefined,
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD",
    "description": "Free cycling guide and route information"
  }
};

// SEO keywords based on guide data  
const seoKeywords = [
  guideData.title.toLowerCase(),
  `${guideData.region.toLowerCase()} cycling guide`,
  `${difficultyLevel.toLowerCase()} cycling route`,
  'cycling guide sri lanka',
  'bicycle route',
  guideData.region.toLowerCase(),
  'cycling tips',
  'route planning'
];

// Calculate estimated reading time
const readingTime = Math.ceil((guideData.content?.length || 0) / 1000) || 5;
---

