  description={guideData.shortDescription || guideData.description}
  canonicalUrl={canonicalUrl}
  ogImage={heroImageAbsolute}
  ogType="article"
  keywords={seoKeywords}
  author="Cycle Paradise Team"
  publishedTime={guideData.createdAt?.toISOString()}
  modifiedTime={guideData.updatedAt?.toISOString()}
  structuredData={structuredData}
