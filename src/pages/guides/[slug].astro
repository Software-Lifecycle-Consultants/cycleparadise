                    </div>
                    <svg class="w-5 h-5 text-gray-400 group-open:rotate-45 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                  </summary>
                </details>
              ))}
            </div>
          </section>
        )}
      </div>

      <!-- Sidebar -->
      <div class="mt-12 lg:mt-0">
        <!-- Route Info Card -->
        <div class="bg-white border border-gray-200 rounded-lg shadow-lg p-6 sticky top-4 mb-8">
          <h3 class="font-display font-bold text-lg text-gray-900 mb-4">
            Route Information
          </h3>

          <!-- Route Details -->
          <div class="space-y-4">
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Distance:</span>
              <span class="font-medium">{distanceLabel}</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Duration:</span>
              <span class="font-medium">{durationLabel}</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Difficulty:</span>
              <span class={`px-2 py-1 rounded text-xs font-medium ${getDifficultyColor(difficultyLevel)}`}>
                {difficultyLevel.toLowerCase()}
              </span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Region:</span>
              <span class="font-medium">{guideData.region}</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Starting Point:</span>
              <span class="font-medium">{startingPoint}</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Ending Point:</span>
              <span class="font-medium">{endingPoint}</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Terrain:</span>
              <span class="font-medium">{terrainLabel}</span>
