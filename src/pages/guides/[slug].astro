---
import Layout from '../../layouts/Layout.astro';
import { cyclingGuideRepository } from '../../lib/db/repositories/cycling-guides.js';
import type { CyclingGuide } from '../../types/models.js';

export async function getStaticPaths() {
  try {
    const result = await cyclingGuideRepository.findMany({ limit: 100 });
    return result.guides.map((guide) => ({
      params: { slug: guide.slug },
    }));
  } catch (error) {
    console.error('Error generating guide static paths:', error);
    return [];
  }
}

// Get the guide slug from the URL
const { slug } = Astro.params;

if (!slug) {
  throw new Error('Guide slug is required');
}

// Fetch the guide data
let guideData: CyclingGuide | null = null;
let relatedGuides: CyclingGuide[] = [];

try {
  guideData = await cyclingGuideRepository.findBySlug(slug);
  if (!guideData) {
    return Astro.redirect('/guides', 404);
  }
  
  // Get related guides from the same region or difficulty
  const related = await cyclingGuideRepository.findMany({
    region: guideData.region,
    limit: 4
  });
  relatedGuides = related.guides.filter(g => g.id !== guideData!.id).slice(0, 3);
} catch (error) {
  console.error('Failed to load guide:', error);
  return Astro.redirect('/guides', 500);
}

// Helper function to get difficulty badge color
function getDifficultyColor(level: string): string {
  switch (level) {
    case 'EASY': return 'bg-green-100 text-green-800';
    case 'INTERMEDIATE': return 'bg-yellow-100 text-yellow-800';
    case 'CHALLENGING': return 'bg-red-100 text-red-800';
    default: return 'bg-gray-100 text-gray-800';
  }
}

// Generate structured data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": guideData.title,
  "description": guideData.description,
  "image": guideData.images[0] ? `https://cycleparadise.lk${guideData.images[0]}` : "https://cycleparadise.lk/images/default-route.jpg",
  "url": `https://cycleparadise.lk/guides/${guideData.slug}`,
  "author": {
    "@type": "Organization",
    "name": "Cycle Paradise"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Cycle Paradise",
    "logo": {
      "@type": "ImageObject",
      "url": "https://cycleparadise.lk/images/logo.png"
    }
  },
  "datePublished": guideData.createdAt?.toISOString() || new Date().toISOString(),
  "dateModified": guideData.updatedAt?.toISOString() || new Date().toISOString(),
  "articleSection": "Cycling Guides",
  "keywords": [
    guideData.title.toLowerCase(),
    `${guideData.region.toLowerCase()} cycling`,
    guideData.difficulty.toLowerCase(),
    'cycling guide',
    'sri lanka cycling',
    'bicycle route'
  ].join(', '),
  "about": {
    "@type": "Place",
    "name": guideData.region,
    "description": `${guideData.difficulty} level cycling route in ${guideData.region}`
  },
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD",
    "description": "Free cycling guide and route information"
  }
};

// SEO keywords based on guide data  
const seoKeywords = [
  guideData.title.toLowerCase(),
  `${guideData.region.toLowerCase()} cycling guide`,
  `${guideData.difficulty.toLowerCase()} cycling route`,
  'cycling guide sri lanka',
  'bicycle route',
  guideData.region.toLowerCase(),
  'cycling tips',
  'route planning'
];

// Calculate estimated reading time
const readingTime = Math.ceil(guideData.content.length / 1000) || 5;
---

<Layout 
  title={`${guideData.title} - Cycling Guide - Cycle Paradise`}
  description={guideData.shortDescription || guideData.description}
  canonicalUrl={`https://cycleparadise.lk/guides/${guideData.slug}`}
  ogImage={guideData.images[0] ? `https://cycleparadise.lk${guideData.images[0]}` : undefined}
  ogType="article"
  keywords={seoKeywords}
  author="Cycle Paradise Team"
  publishedTime={guideData.createdAt?.toISOString()}
  modifiedTime={guideData.updatedAt?.toISOString()}
  structuredData={structuredData}
  description={guideData.shortDescription || guideData.description}
  structuredData={structuredData}
>
  <!-- Guide Hero Section -->
  <section class="relative">
    <!-- Hero Image -->
    <div class="aspect-w-16 aspect-h-6">
      <img 
        src={guideData.images[0] || "/images/default-route.jpg"} 
        alt={guideData.title}
        class="w-full h-96 lg:h-[500px] object-cover"
      />
    </div>
    
    <!-- Guide Info Overlay -->
    <div class="absolute inset-0 bg-black bg-opacity-40 flex items-end">
      <div class="w-full p-6 lg:p-8">
        <div class="mx-auto max-w-7xl">
          <div class="bg-white bg-opacity-95 backdrop-blur-sm rounded-lg p-6 lg:p-8 max-w-3xl">
            <div class="flex items-center gap-3 mb-4">
              <span class={`px-3 py-1 rounded-full text-sm font-medium ${getDifficultyColor(guideData.difficultyLevel)}`}>
                {guideData.difficultyLevel.toLowerCase()}
              </span>
              <span class="text-sm text-gray-600">{guideData.region}</span>
              {guideData.isFeatured && (
                <span class="bg-primary-100 text-primary-800 px-3 py-1 rounded-full text-sm font-medium">
                  Featured Route
                </span>
              )}
            </div>
            
            <h1 class="font-display font-bold text-2xl lg:text-4xl text-gray-900 mb-4">
              {guideData.title}
            </h1>
            
            <p class="text-gray-600 mb-6 lg:text-lg">
              {guideData.shortDescription}
            </p>
            
            <!-- Quick Stats -->
            <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
              <div class="text-center lg:text-left">
                <div class="text-2xl font-bold text-primary-600">{guideData.estimatedDistance}</div>
                <div class="text-sm text-gray-600">Kilometers</div>
              </div>
              <div class="text-center lg:text-left">
                <div class="text-2xl font-bold text-primary-600">{guideData.estimatedDuration}</div>
                <div class="text-sm text-gray-600">Duration</div>
              </div>
              <div class="text-center lg:text-left">
                <div class="text-lg font-bold text-gray-900">{guideData.startingPoint}</div>
                <div class="text-sm text-gray-600">Starting Point</div>
              </div>
              <div class="text-center lg:text-left">
                <div class="text-lg font-bold text-gray-900">{guideData.terrainType}</div>
                <div class="text-sm text-gray-600">Terrain</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-3 lg:gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <!-- Route Description -->
        <section class="mb-12">
          <h2 class="font-display font-bold text-2xl text-gray-900 mb-6">
            About This Route
          </h2>
          <div class="prose prose-lg max-w-none">
            <p class="text-gray-600 leading-relaxed mb-6">
              {guideData.description}
            </p>
            
            {guideData.content && (
              <div class="text-gray-700 leading-relaxed">
                {guideData.content}
              </div>
            )}
          </div>
        </section>

        <!-- Route Map -->
        {guideData.mapImageUrl && (
          <section class="mb-12">
            <h2 class="font-display font-bold text-2xl text-gray-900 mb-6">
              Route Map
            </h2>
            <div class="bg-gray-100 rounded-lg overflow-hidden">
              <img 
                src={guideData.mapImageUrl} 
                alt={`${guideData.title} route map`}
                class="w-full h-auto"
                loading="lazy"
              />
            </div>
            
            {guideData.gpxFileUrl && (
              <div class="mt-4 text-center">
                <a 
                  href={guideData.gpxFileUrl}
                  download
                  class="inline-flex items-center px-4 py-2 bg-primary-600 text-white rounded-lg font-medium hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-colors"
                >
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                  Download GPX File
                </a>
              </div>
            )}
          </section>
        )}

        <!-- Route Highlights -->
        {guideData.highlights.length > 0 && (
          <section class="mb-12">
            <h2 class="font-display font-bold text-2xl text-gray-900 mb-6">
              Route Highlights
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {guideData.highlights.map((highlight) => (
                <div class="flex items-start">
                  <svg class="w-5 h-5 text-primary-600 mt-1 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-gray-700">{highlight}</span>
                </div>
              ))}
            </div>
          </section>
        )}

        <!-- Safety Tips -->
        {guideData.safetyTips.length > 0 && (
          <section class="mb-12">
            <h2 class="font-display font-bold text-2xl text-gray-900 mb-6">
              Safety Tips
            </h2>
            <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6">
              <div class="flex items-start mb-4">
                <svg class="w-6 h-6 text-yellow-600 mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.728-.833-2.498 0L4.316 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                </svg>
                <h3 class="font-semibold text-lg text-yellow-800">Important Safety Information</h3>
              </div>
              <ul class="space-y-2">
                {guideData.safetyTips.map((tip) => (
                  <li class="flex items-start">
                    <svg class="w-4 h-4 text-yellow-600 mt-1 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-yellow-800">{tip}</span>
                  </li>
                ))}
              </ul>
            </div>
          </section>
        )}

        <!-- Nearby Attractions -->
        {guideData.nearbyAttractions.length > 0 && (
          <section class="mb-12">
            <h2 class="font-display font-bold text-2xl text-gray-900 mb-6">
              Nearby Attractions
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {guideData.nearbyAttractions.map((attraction) => (
                <div class="flex items-center p-4 bg-gray-50 rounded-lg">
                  <svg class="w-5 h-5 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <span class="text-gray-900 font-medium">{attraction}</span>
                </div>
              ))}
            </div>
          </section>
        )}

        <!-- Image Gallery -->
        {guideData.images.length > 1 && (
          <section class="mb-12">
            <h2 class="font-display font-bold text-2xl text-gray-900 mb-6">
              Route Gallery
            </h2>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
              {guideData.images.slice(1).map((image, index) => (
                <div class="aspect-w-4 aspect-h-3">
                  <img 
                    src={image} 
                    alt={`${guideData.title} - Image ${index + 2}`}
                    class="w-full h-48 object-cover rounded-lg hover:opacity-90 transition-opacity cursor-pointer"
                    loading="lazy"
                  />
                </div>
              ))}
            </div>
          </section>
        )}
      </div>

      <!-- Sidebar -->
      <div class="mt-12 lg:mt-0">
        <!-- Route Info Card -->
        <div class="bg-white border border-gray-200 rounded-lg shadow-lg p-6 sticky top-4 mb-8">
          <h3 class="font-display font-bold text-lg text-gray-900 mb-4">
            Route Information
          </h3>

          <!-- Route Details -->
          <div class="space-y-4">
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Distance:</span>
              <span class="font-medium">{guideData.estimatedDistance} km</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Duration:</span>
              <span class="font-medium">{guideData.estimatedDuration}</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Difficulty:</span>
              <span class={`px-2 py-1 rounded text-xs font-medium ${getDifficultyColor(guideData.difficultyLevel)}`}>
                {guideData.difficultyLevel.toLowerCase()}
              </span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Region:</span>
              <span class="font-medium">{guideData.region}</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Starting Point:</span>
              <span class="font-medium">{guideData.startingPoint}</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Ending Point:</span>
              <span class="font-medium">{guideData.endingPoint}</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Terrain:</span>
              <span class="font-medium">{guideData.terrainType}</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Best Time:</span>
              <span class="font-medium">{guideData.bestTimeToVisit}</span>
            </div>
          </div>

          {/* Action Buttons */}
          <div class="mt-6 space-y-3">
            {guideData.gpxFileUrl && (
              <a 
                href={guideData.gpxFileUrl}
                download
                class="w-full bg-primary-600 text-white py-3 px-4 rounded-lg font-semibold hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-colors flex items-center justify-center"
              >
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                Download GPX
              </a>
            )}
            
            <a 
              href="/packages"
              class="w-full border border-primary-600 text-primary-600 py-3 px-4 rounded-lg font-semibold hover:bg-primary-50 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-colors flex items-center justify-center"
            >
              Join Guided Tour
            </a>
          </div>

          <!-- Contact Info -->
          <div class="mt-6 pt-6 border-t border-gray-200 text-center">
            <p class="text-sm text-gray-600 mb-2">
              Need route assistance?
            </p>
            <p class="text-sm font-medium text-gray-900">
              Call: <a href="tel:+94123456789" class="text-primary-600 hover:text-primary-700">+94 12 345 6789</a>
            </p>
          </div>
        </div>

        <!-- Related Routes */
        {relatedGuides.length > 0 && (
          <div>
            <h3 class="font-display font-bold text-xl text-gray-900 mb-4">
              More Routes in {guideData.region}
            </h3>
            <div class="space-y-4">
              {relatedGuides.map((relatedGuide) => (
                <a href={`/guides/${relatedGuide.slug}`} class="block bg-white border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                  <div class="flex items-center space-x-4">
                    <img 
                      src={relatedGuide.images[0] || "/images/default-route.jpg"} 
                      alt={relatedGuide.title}
                      class="w-16 h-16 object-cover rounded-lg"
                    />
                    <div class="flex-1 min-w-0">
                      <h4 class="font-semibold text-gray-900 truncate mb-1">
                        {relatedGuide.title}
                      </h4>
                      <div class="flex items-center space-x-2 text-sm text-gray-600">
                        <span>{relatedGuide.estimatedDistance} km</span>
                        <span>•</span>
                        <span class={`px-2 py-0.5 rounded text-xs ${getDifficultyColor(relatedGuide.difficultyLevel)}`}>
                          {relatedGuide.difficultyLevel.toLowerCase()}
                        </span>
                      </div>
                    </div>
                  </div>
                </a>
              ))}
            </div>
            
            <div class="mt-4 text-center">
              <a 
                href="/guides"
                class="text-primary-600 hover:text-primary-700 font-medium text-sm"
              >
                View All Guides →
              </a>
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</Layout>

<script>
  // Image gallery functionality
  document.addEventListener('DOMContentLoaded', function() {
    // Simple lightbox functionality for route gallery images
    const galleryImages = document.querySelectorAll('img[src*="Image"]');
    
    galleryImages.forEach(img => {
      img.addEventListener('click', function() {
        // Simple modal implementation
        const modal = document.createElement('div');
        modal.className = 'fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50 p-4';
        modal.innerHTML = `
          <div class="relative max-w-4xl max-h-full">
            <img src="${this.src}" alt="${this.alt}" class="max-w-full max-h-full object-contain rounded-lg">
            <button class="absolute top-4 right-4 text-white bg-black bg-opacity-50 rounded-full p-2 hover:bg-opacity-75">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
        `;
        
        // Close modal on background click or close button
        modal.addEventListener('click', function(e) {
          if (e.target === modal || e.target.closest('button')) {
            document.body.removeChild(modal);
          }
        });
        
        // Close on Escape key
        document.addEventListener('keydown', function escapeHandler(e) {
          if (e.key === 'Escape') {
            if (document.body.contains(modal)) {
              document.body.removeChild(modal);
            }
            document.removeEventListener('keydown', escapeHandler);
          }
        });
        
        document.body.appendChild(modal);
      });
    });
  });
</script>