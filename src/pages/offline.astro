---
import Layout from '../layouts/Layout.astro';
---

<Layout 
  title="Offline - Cycle Paradise"
  description="You're currently offline. Please check your internet connection."
  noIndex={true}
>
  <div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
      <div class="text-center">
        <!-- Offline Icon -->
        <div class="mx-auto flex items-center justify-center h-24 w-24 rounded-full bg-red-100 mb-8">
          <svg class="h-12 w-12 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
        </div>

        <h1 class="text-3xl font-bold text-gray-900 mb-4">
          You're Offline
        </h1>

        <p class="text-lg text-gray-600 mb-8">
          It looks like you've lost your internet connection. Don't worry, you can still browse some of our cached content while offline.
        </p>
      </div>

      <!-- Offline Actions -->
      <div class="space-y-4">
        <button 
          onclick="window.location.reload()" 
          class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors"
        >
          Try Again
        </button>

        <a 
          href="/" 
          class="w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors"
        >
          Go to Homepage
        </a>
      </div>

      <!-- Cached Content Info -->
      <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-4">
        <h3 class="text-sm font-medium text-blue-800 mb-2">
          What you can still do:
        </h3>
        <ul class="text-sm text-blue-700 space-y-1">
          <li>• Browse previously visited tour packages</li>
          <li>• Read cached cycling guides</li>
          <li>• View your recently viewed content</li>
        </ul>
      </div>

      <!-- Connection Status -->
      <div id="connection-status" class="mt-6 text-center">
        <p class="text-sm text-gray-500">
          Checking connection status...
        </p>
      </div>
    </div>
  </div>
</Layout>

<script>
  // Monitor connection status
  function updateConnectionStatus() {
    const statusElement = document.getElementById('connection-status');
    if (!statusElement) return;

    if (navigator.onLine) {
      statusElement.innerHTML = `
        <p class="text-sm text-green-600 flex items-center justify-center">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          Connection restored - you can now browse normally
        </p>
      `;
      
      // Auto-refresh after connection is restored
      setTimeout(() => {
        window.location.reload();
      }, 2000);
    } else {
      statusElement.innerHTML = `
        <p class="text-sm text-red-600 flex items-center justify-center">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
          </svg>
          Still offline - please check your internet connection
        </p>
      `;
    }
  }

  // Check connection status on load
  document.addEventListener('DOMContentLoaded', updateConnectionStatus);

  // Listen for connection changes
  window.addEventListener('online', updateConnectionStatus);
  window.addEventListener('offline', updateConnectionStatus);

  // Periodic connection check
  setInterval(() => {
    // Try to fetch a small resource to verify connection
    fetch('/favicon.svg', { 
      method: 'HEAD',
      cache: 'no-cache',
      signal: AbortSignal.timeout(5000)
    })
    .then(() => {
      if (!navigator.onLine) {
        // Force online status update
        window.dispatchEvent(new Event('online'));
      }
    })
    .catch(() => {
      if (navigator.onLine) {
        // Force offline status update
        window.dispatchEvent(new Event('offline'));
      }
    });
  }, 10000);
</script>