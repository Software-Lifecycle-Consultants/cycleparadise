---
import UserForm from '../../../components/admin/UserForm.astro';
import AdminLayout from '../../../layouts/AdminLayout.astro';

const user = Astro.locals.user;
if (!user) {
  return Astro.redirect('/admin/login');
}
---

<AdminLayout title="Add New User" user={user}>
  <div class="max-w-3xl mx-auto">
    <div class="mb-6">
      <h1 class="text-2xl font-bold text-gray-900">Add New User</h1>
      <p class="text-gray-600 mt-1">Create a new admin dashboard account</p>
    </div>

    <UserForm />
  </div>
</AdminLayout>
