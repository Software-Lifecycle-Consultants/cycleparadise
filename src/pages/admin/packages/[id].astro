---
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { prisma } from '../../../lib/db/connection';

const user = Astro.locals.user;
if (!user) {
  return Astro.redirect('/admin/login');
}

const packageId = Astro.params.id;
const isEdit = packageId && packageId !== 'new';

let packageData: any = null;
let error = '';

// Fetch package data if editing
if (isEdit) {
  try {
    packageData = await prisma.tourPackage.findUnique({
      where: { id: packageId },
    });

    if (!packageData) {
      error = 'Package not found';
    }
  } catch (err) {
    console.error('Failed to load package:', err);
    error = 'Failed to load package';
  }
}

const title = isEdit ? 'Edit Package' : 'Create Package';
const difficultyLevels = ['BEGINNER', 'INTERMEDIATE', 'ADVANCED', 'EXPERT'];
---

<AdminLayout title={title} user={user}>
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center space-x-2 text-sm text-gray-600 mb-2">
      <a href="/admin/packages" class="hover:text-emerald-600">Packages</a>
      <span>/</span>
      <span class="text-gray-900">{title}</span>
    </div>
    <h1 class="text-2xl font-bold text-gray-900">{title}</h1>
  </div>

  {
    error && (
      <div class="mb-6 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
        {error}
      </div>
    )
  }

  <!-- Form -->
  <form id="packageForm" class="space-y-6">
    <input type="hidden" name="id" value={packageId || ''} />

    <!-- Basic Information -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Basic Information</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Title -->
        <div class="md:col-span-2">
          <label for="title" class="block text-sm font-medium text-gray-700 mb-2">
            Package Title <span class="text-red-500">*</span>
          </label>
          <input
            type="text"
            id="title"
            name="title"
            value={packageData?.title || ''}
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
            placeholder="e.g., Hill Country Adventure"
          />
        </div>

        <!-- Short Description -->
        <div class="md:col-span-2">
          <label for="shortDescription" class="block text-sm font-medium text-gray-700 mb-2">
            Short Description
          </label>
          <input
            type="text"
            id="shortDescription"
            name="shortDescription"
            value={packageData?.shortDescription || ''}
            maxlength="200"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
            placeholder="Brief tagline for the package"
          />
        </div>

        <!-- Region -->
        <div>
          <label for="region" class="block text-sm font-medium text-gray-700 mb-2">
            Region <span class="text-red-500">*</span>
          </label>
          <input
            type="text"
            id="region"
            name="region"
            value={packageData?.region || ''}
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
            placeholder="e.g., Hill Country"
          />
        </div>

        <!-- Duration -->
        <div>
          <label for="duration" class="block text-sm font-medium text-gray-700 mb-2">
            Duration (days) <span class="text-red-500">*</span>
          </label>
          <input
            type="number"
            id="duration"
            name="duration"
            value={packageData?.duration || ''}
            required
            min="1"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
          />
        </div>

        <!-- Difficulty Level -->
        <div>
          <label for="difficultyLevel" class="block text-sm font-medium text-gray-700 mb-2">
            Difficulty Level <span class="text-red-500">*</span>
          </label>
          <select
            id="difficultyLevel"
            name="difficultyLevel"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
          >
            {
              difficultyLevels.map((level) => (
                <option value={level} selected={packageData?.difficultyLevel === level}>
                  {level}
                </option>
              ))
            }
          </select>
        </div>

        <!-- Base Price -->
        <div>
          <label for="basePrice" class="block text-sm font-medium text-gray-700 mb-2">
            Base Price (USD) <span class="text-red-500">*</span>
          </label>
          <input
            type="number"
            id="basePrice"
            name="basePrice"
            value={packageData?.basePrice || ''}
            required
            min="0"
            step="0.01"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
          />
        </div>

        <!-- Max Participants -->
        <div>
          <label for="maxParticipants" class="block text-sm font-medium text-gray-700 mb-2">
            Max Participants <span class="text-red-500">*</span>
          </label>
          <input
            type="number"
            id="maxParticipants"
            name="maxParticipants"
            value={packageData?.maxParticipants || ''}
            required
            min="1"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
          />
        </div>

        <!-- YouTube Video ID -->
        <div>
          <label for="youtubeVideoId" class="block text-sm font-medium text-gray-700 mb-2">
            YouTube Video ID
          </label>
          <input
            type="text"
            id="youtubeVideoId"
            name="youtubeVideoId"
            value={packageData?.youtubeVideoId || ''}
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
            placeholder="e.g., dQw4w9WgXcQ"
          />
        </div>
      </div>
    </div>

    <!-- Description -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Full Description</h2>

      <textarea
        id="description"
        name="description"
        rows="6"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
        placeholder="Detailed description of the package..."
        >{packageData?.description || ''}</textarea
      >
    </div>

    <!-- Status & Visibility -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Status & Visibility</h2>

      <div class="space-y-4">
        <div class="flex items-center">
          <input
            type="checkbox"
            id="isActive"
            name="isActive"
            checked={packageData?.isActive !== false}
            class="w-4 h-4 text-emerald-600 border-gray-300 rounded focus:ring-emerald-500"
          />
          <label for="isActive" class="ml-2 text-sm text-gray-700">
            Active (visible to customers)
          </label>
        </div>

        <div class="flex items-center">
          <input
            type="checkbox"
            id="featured"
            name="featured"
            checked={packageData?.featured === true}
            class="w-4 h-4 text-emerald-600 border-gray-300 rounded focus:ring-emerald-500"
          />
          <label for="featured" class="ml-2 text-sm text-gray-700">
            Featured (show on homepage)
          </label>
        </div>
      </div>
    </div>

    <!-- SEO -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">SEO Settings</h2>

      <div class="space-y-4">
        <div>
          <label for="metaTitle" class="block text-sm font-medium text-gray-700 mb-2">
            Meta Title
          </label>
          <input
            type="text"
            id="metaTitle"
            name="metaTitle"
            value={packageData?.metaTitle || ''}
            maxlength="60"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
          />
        </div>

        <div>
          <label for="metaDescription" class="block text-sm font-medium text-gray-700 mb-2">
            Meta Description
          </label>
          <textarea
            id="metaDescription"
            name="metaDescription"
            rows="3"
            maxlength="160"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
            >{packageData?.metaDescription || ''}</textarea
          >
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-end space-x-4">
      <a
        href="/admin/packages"
        class="px-6 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition font-medium"
      >
        Cancel
      </a>
      <button
        type="submit"
        id="submitBtn"
        class="px-6 py-2 bg-emerald-600 text-white rounded-lg hover:bg-emerald-700 transition font-medium"
      >
        {isEdit ? 'Update Package' : 'Create Package'}
      </button>
    </div>
  </form>

  <script>
    const form = document.getElementById('packageForm') as HTMLFormElement;
    const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const data: Record<string, any> = {};

      // Convert form data to JSON
      formData.forEach((value, key) => {
        if (key === 'isActive' || key === 'featured') {
          data[key] = form.querySelector(`input[name="${key}"]`)?.checked || false;
        } else if (key === 'duration' || key === 'maxParticipants') {
          data[key] = parseInt(value as string);
        } else if (key === 'basePrice') {
          data[key] = parseFloat(value as string);
        } else {
          data[key] = value;
        }
      });

      // Disable submit button
      submitBtn.disabled = true;
      submitBtn.textContent = 'Saving...';

      try {
        const packageId = data.id;
        const isEdit = packageId && packageId !== 'new';
        const url = isEdit ? `/api/admin/packages/${packageId}` : '/api/admin/packages';
        const method = isEdit ? 'PUT' : 'POST';

        const response = await fetch(url, {
          method,
          headers: {
            'Content-Type': 'application/json',
          },
          credentials: 'include',
          body: JSON.stringify(data),
        });

        if (response.ok) {
          window.location.href = '/admin/packages';
        } else {
          const error = await response.json();
          alert(error.error || 'Failed to save package');
          submitBtn.disabled = false;
          submitBtn.textContent = isEdit ? 'Update Package' : 'Create Package';
        }
      } catch (error) {
        console.error('Save error:', error);
        alert('Failed to save package');
        submitBtn.disabled = false;
        submitBtn.textContent = isEdit ? 'Update Package' : 'Create Package';
      }
    });
  </script>
</AdminLayout>
