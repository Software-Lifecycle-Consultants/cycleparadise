---
import ImageUploadZone from '../../../components/admin/ImageUploadZone.astro';
import MediaGrid from '../../../components/admin/MediaGrid.astro';
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { prisma } from '../../../lib/db/connection';

const user = Astro.locals.user;
if (!user) {
  return Astro.redirect('/admin/login');
}

// Initial fetch for SSR
const initialAssets = await prisma.mediaAsset.findMany({
  orderBy: { createdAt: 'desc' },
  take: 20,
});

// Add URLs
const assetsWithUrls = initialAssets.map((asset) => ({
  ...asset,
  url: `/uploads/${asset.storageKey}`,
}));
---

<AdminLayout title="Media Library" user={user}>
  <div class="max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Media Library</h1>
        <p class="text-gray-600 mt-1">Manage images and files</p>
      </div>
    </div>

    <!-- Upload Section -->
    <div class="mb-8 bg-white p-6 rounded-xl shadow-sm border border-gray-100">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Upload New Images</h2>
      <ImageUploadZone />
    </div>

    <!-- Gallery Section -->
    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-lg font-medium text-gray-900">Recent Uploads</h2>
        <!-- Simple refresh button if needed, but auto-reload handles it -->
      </div>

      <MediaGrid initialAssets={assetsWithUrls} />
    </div>
  </div>
</AdminLayout>
