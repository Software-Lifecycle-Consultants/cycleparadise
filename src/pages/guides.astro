import Layout from '../layouts/Layout.astro';
import { cyclingGuideRepository } from '../lib/db/repositories/cycling-guides.js';
import { fallbackCyclingGuides } from '../data/fallback-cycling-guides.ts';
import type { CyclingGuide, GuideSearchParams } from '../types/models.js';

function getDatabaseUrl() {
  return typeof process !== 'undefined' ? process.env?.DATABASE_URL : undefined;
}

const hasDatabaseConnection = Boolean(getDatabaseUrl());

// Get search parameters from URL
const url = new URL(Astro.request.url);

// Map difficulty filter from string to integer rating
const difficultyFilterValue = url.searchParams.get('difficulty');
let difficultyRating: number | undefined;

if (difficultyFilterValue) {
  const ratingMap: Record<string, number> = {
    'EASY': 2,        // Ratings 1-2
    'INTERMEDIATE': 5, // Ratings 3-5  
    'CHALLENGING': 10  // Ratings 6-10
  };
  difficultyRating = ratingMap[difficultyFilterValue];
}

const searchParams: GuideSearchParams = {
  search: url.searchParams.get('search') || undefined,
  query: url.searchParams.get('search') || undefined,
  region: url.searchParams.get('region') || undefined,
  difficultyRating: difficultyRating,
  page: url.searchParams.get('page') ? Number(url.searchParams.get('page')) : 1,
  limit: 12
};

const ensureArray = <T = any>(value: any): T[] => {
  if (!value) return [];
  if (Array.isArray(value)) return value as T[];
  if (typeof value === 'string') {
    try {
      const parsed = JSON.parse(value);
      return Array.isArray(parsed) ? (parsed as T[]) : [];
    } catch {
      return [];
    }
  }
  if (typeof value === 'object') {
    if (Array.isArray((value as any).items)) return (value as any).items as T[];
    if (Array.isArray((value as any).value)) return (value as any).value as T[];
    if (Array.isArray((value as any).data)) return (value as any).data as T[];
  }
  return [];
};

const getGuideThumbnail = (guide: CyclingGuide) => {
  const images = ensureArray<string>(guide.images);
  return images[0] || '/images/default-route.jpg';
};

// Helper to convert difficulty rating to level for fallback
const getDifficultyLevelFromRating = (rating: number): 'EASY' | 'INTERMEDIATE' | 'CHALLENGING' => {
  if (rating <= 2) return 'EASY';
  if (rating <= 5) return 'INTERMEDIATE';
  return 'CHALLENGING';
};

const filterFallbackGuides = (guides: CyclingGuide[], params: GuideSearchParams) => {
  return guides.filter((guide) => {
    const searchTerm = params.search?.toLowerCase();
    const matchesSearch = searchTerm
      ? [guide.title, guide.shortDescription, guide.description, guide.region]
          .filter(Boolean)
          .some((field) => field!.toLowerCase().includes(searchTerm))
      : true;

    const matchesRegion = params.region
      ? guide.region?.toLowerCase() === params.region.toLowerCase()
      : true;

    const matchesDifficulty = params.difficultyRating
      ? guide.difficultyRating <= params.difficultyRating
      : true;

    return matchesSearch && matchesRegion && matchesDifficulty;
  });
};

const getGuideRegions = (guides: CyclingGuide[]) =>
  Array.from(new Set(guides.map((guide) => guide.region).filter(Boolean))).sort();

const applyFallbackGuides = () => {
  const fallbackList = fallbackCyclingGuides as CyclingGuide[];
  const filtered = filterFallbackGuides(fallbackList, searchParams);
  totalCount = filtered.length;
  const limit = searchParams.limit ?? 12;
  const currentPage = searchParams.page ?? 1;
  const start = (currentPage - 1) * limit;
  guides = filtered.slice(start, start + limit);
  regions = getGuideRegions(fallbackList);
};

// Fetch guides and filter options
let guides: CyclingGuide[] = [];
let totalCount = 0;
let regions: string[] = [];

if (hasDatabaseConnection) {
  try {
    const result = await cyclingGuideRepository.findMany(searchParams);
    
    if (Array.isArray(result)) {
      guides = result;
      totalCount = result.length;
    } else if (result && typeof result === 'object') {
      guides = (result as any).guides ?? [];
      totalCount = (result as any).totalCount ?? guides.length;
    }

    regions = await cyclingGuideRepository.getRegions();
    
    // If database is empty, use fallback data
    if (guides.length === 0 && regions.length === 0) {
      applyFallbackGuides();
    }
  } catch (error) {
    console.error('Failed to load cycling guides:', error);
    applyFallbackGuides();
  }
} else {
  applyFallbackGuides();
}

// Calculate pagination
const totalPages = Math.max(1, Math.ceil(totalCount / searchParams.limit!));
const currentPage = searchParams.page || 1;

// Helper function to get difficulty badge color (works with integer rating)
function getDifficultyColor(level: string | number): string {
  // Convert integer rating to level string if needed
  let diffLevel: string;
  if (typeof level === 'number') {
    diffLevel = getDifficultyLevelFromRating(level);
  } else {
    diffLevel = level;
  }
  
  switch (diffLevel) {
    case 'EASY': return 'bg-green-100 text-green-800';
    case 'INTERMEDIATE': return 'bg-yellow-100 text-yellow-800';
    case 'CHALLENGING': return 'bg-red-100 text-red-800';
    default: return 'bg-gray-100 text-gray-800';
  }
}

function getDifficultyLabel(rating: number | string): string {
  if (typeof rating === 'number') {
    return getDifficultyLevelFromRating(rating).toLowerCase();
  }
  return rating.toLowerCase();
}
---

<Layout 
  title={searchParams.search ? `Search Results for "${searchParams.search}" - Cycling Guides - Cycle Paradise` : "Cycling Guides - Cycle Paradise"}
  description="Discover the best cycling routes in Sri Lanka with our comprehensive guides. From easy coastal rides to challenging mountain trails, find your perfect cycling adventure."
>
  <!-- Page Header -->
  <section class="relative py-16 -mt-[72px]">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
      <img
        src="https://images.unsplash.com/photo-1541625602330-2277a4c46182?q=80&w=2070&auto=format&fit=crop"
        alt="Cyclist riding through scenic Sri Lankan landscape"
        class="w-full h-full object-cover"
      />
      <!-- Dark overlay for better text contrast -->
      <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-black/30"></div>
    </div>

    <!-- Header Content -->
    <div class="relative z-10 mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pt-32">
      <div class="text-center">
        <h1 class="font-display font-bold text-4xl text-white sm:text-5xl">
          Cycling Guides
        </h1>
        <p class="mt-4 text-lg text-gray-100 max-w-3xl mx-auto">
          Explore Sri Lanka's most beautiful cycling routes with our detailed guides. 
          Each route includes maps, difficulty ratings, safety tips, and local attractions.
        </p>
        <p class="mt-2 text-gray-100">
          Showing {guides.length} of {totalCount} routes
        </p>
      </div>
    </div>
  </section>

  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <!-- Search and Filters -->
    <div class="mb-8 bg-white p-6 rounded-lg shadow-sm border border-gray-200">
      <form id="filter-form" class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <!-- Search -->
        <div>
          <label for="search" class="block text-sm font-medium text-gray-700 mb-2">
            Search Routes
          </label>
          <input
            type="text"
            id="search"
            name="search"
            value={searchParams.search || ''}
            placeholder="Search by name or location..."
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
          />
        </div>

        <!-- Region Filter -->
        <div>
          <label for="region" class="block text-sm font-medium text-gray-700 mb-2">
            Region
          </label>
          <select
            id="region"
            name="region"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
          >
            <option value="">All Regions</option>
            {regions.map(region => (
              <option value={region} selected={searchParams.region === region}>
                {region}
              </option>
            ))}
          </select>
        </div>

        <!-- Difficulty Filter -->
        <div>
          <label for="difficulty" class="block text-sm font-medium text-gray-700 mb-2">
            Difficulty
          </label>
          <select
            id="difficulty"
            name="difficulty"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
          >
            <option value="">All Levels</option>
            <option value="EASY" selected={difficultyFilterValue === 'EASY'}>Easy</option>
            <option value="INTERMEDIATE" selected={difficultyFilterValue === 'INTERMEDIATE'}>Intermediate</option>
            <option value="CHALLENGING" selected={difficultyFilterValue === 'CHALLENGING'}>Challenging</option>
          </select>
        </div>

        <!-- Actions -->
        <div class="flex items-end space-x-2">
          <button
            type="submit"
            class="flex-1 bg-primary-600 text-white py-2 px-4 rounded-md hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-colors"
          >
            Search
          </button>
          <button
            type="button"
            id="clear-filters"
            class="flex-1 bg-gray-200 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors"
          >
            Clear
          </button>
        </div>
      </form>
    </div>

    <!-- Cycling Guides Grid -->
    {guides.length > 0 ? (
      <>
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8">
          {guides.map((guide) => (
            <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <!-- Route Image -->
              <div class="aspect-w-16 aspect-h-10">
                <img 
                  src={getGuideThumbnail(guide)} 
                  alt={guide.title}
                  class="w-full h-48 object-cover"
                />
              </div>
              
              <!-- Content -->
              <div class="p-6">
                <!-- Header -->
                  <div class="flex items-start justify-between mb-3">
                    <div class="flex items-center gap-2">
                      <span class={`px-2 py-1 rounded-full text-xs font-medium ${getDifficultyColor(guide.difficultyRating || guide.difficultyLevel || 'EASY')}`}>
                        {getDifficultyLabel(guide.difficultyRating || guide.difficultyLevel || 'easy')}
                      </span>
                      <span class="text-sm text-gray-600">{guide.region}</span>
                    </div>
                  
                  {guide.featured && (
                    <span class="bg-primary-100 text-primary-800 px-2 py-1 rounded-full text-xs font-medium">
                      Featured
                    </span>
                  )}
                </div>

                <!-- Title and Description -->
                <h3 class="font-display font-bold text-xl text-gray-900 mb-2">
                  <a href={`/guides/${guide.slug}`} class="hover:text-primary-600 transition-colors">
                    {guide.title}
                  </a>
                </h3>
                
                <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                  {guide.shortDescription}
                </p>

                <!-- Route Stats -->
                <div class="grid grid-cols-2 gap-4 mb-4 text-sm">
                  <div class="flex items-center text-gray-600">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                    </svg>
                    <span>{guide.estimatedDistance} km</span>
                  </div>
                  
                  <div class="flex items-center text-gray-600">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span>{guide.estimatedDuration}</span>
                  </div>
                </div>

                <!-- Highlights -->
                {guide.highlights && guide.highlights.length > 0 && (
                  <div class="mb-4">
                    <div class="flex flex-wrap gap-1">
                      {guide.highlights.slice(0, 3).map((highlight) => (
                        <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-xs">
                          {highlight}
                        </span>
                      ))}
                      {guide.highlights.length > 3 && (
                        <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-xs">
                          +{guide.highlights.length - 3} more
                        </span>
                      )}
                    </div>
                  </div>
                )}

                <!-- Action Buttons -->
                <div class="flex space-x-2">
                  <a 
                    href={`/guides/${guide.slug}`}
                    class="flex-1 bg-primary-600 text-white py-2 px-4 rounded-md text-center font-medium hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition-colors"
                  >
                    View Guide
                  </a>
                  
                  {guide.gpxFileUrl && (
                    <a 
                      href={guide.gpxFileUrl}
                      download
                      class="bg-gray-200 text-gray-700 py-2 px-4 rounded-md font-medium hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors"
                      title="Download GPX file"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                      </svg>
                    </a>
                  )}
                </div>
              </div>
            </article>
          ))}
        </div>

        <!-- Pagination -->
        {totalPages > 1 && (
          <div class="mt-12 flex items-center justify-between">
            <div class="text-sm text-gray-700">
              Showing page {currentPage} of {totalPages}
            </div>
            
            <nav class="flex items-center space-x-2">
              {currentPage > 1 && (
                <a
                  href={`/guides?${new URLSearchParams({...Object.fromEntries(url.searchParams), page: (currentPage - 1).toString()})}`}
                  class="px-3 py-2 text-sm font-medium text-gray-500 hover:text-gray-700 border border-gray-300 rounded-md hover:bg-gray-50"
                >
                  Previous
                </a>
              )}
              
              {Array.from({ length: Math.min(5, totalPages) }, (_, i) => {
                const pageNum = Math.max(1, Math.min(totalPages, currentPage - 2 + i));
                return (
                  <a
                    href={`/guides?${new URLSearchParams({...Object.fromEntries(url.searchParams), page: pageNum.toString()})}`}
                    class={`px-3 py-2 text-sm font-medium rounded-md ${
                      pageNum === currentPage
                        ? 'bg-primary-600 text-white'
                        : 'text-gray-500 hover:text-gray-700 border border-gray-300 hover:bg-gray-50'
                    }`}
                  >
                    {pageNum}
                  </a>
                );
              })}
              
              {currentPage < totalPages && (
                <a
                  href={`/guides?${new URLSearchParams({...Object.fromEntries(url.searchParams), page: (currentPage + 1).toString()})}`}
                  class="px-3 py-2 text-sm font-medium text-gray-500 hover:text-gray-700 border border-gray-300 rounded-md hover:bg-gray-50"
                >
                  Next
                </a>
              )}
            </nav>
          </div>
        )}
      </>
    ) : (
      <!-- No Results -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-1.447-.894L15 4m0 13V4m-6 3v10"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No cycling guides found</h3>
        <p class="mt-1 text-sm text-gray-500">
          Try adjusting your search criteria or explore all guides.
        </p>
        <div class="mt-6">
          <button
            type="button"
            id="clear-all-filters"
            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-primary-600 bg-primary-100 hover:bg-primary-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
          >
            View All Guides
          </button>
        </div>
      </div>
    )}
  </div>

  <!-- CTA Section -->
  <section
    class="relative bg-gradient-to-br from-primary-700 via-primary-600 to-primary-500 overflow-hidden"
  >
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-15">
      <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
            <circle cx="20" cy="20" r="1" fill="white"></circle>
          </pattern>
        </defs>
