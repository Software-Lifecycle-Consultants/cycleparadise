              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            Contact Us Now
          </a>
        </div>

        <!-- Social Proof Badge -->
        <div
          class="mt-8 flex items-center justify-center text-primary-50 text-sm"
        >
          <span>Trusted by 1,000+ happy cyclists across the globe</span>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Filter form handling
  document.addEventListener('DOMContentLoaded', function() {
    const filterForm = document.getElementById('filter-form');
    const clearFiltersBtn = document.getElementById('clear-filters');
    const clearAllFiltersBtn = document.getElementById('clear-all-filters');

    if (filterForm && filterForm instanceof HTMLFormElement) {
      filterForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(filterForm);
        const params = new URLSearchParams();
        
        for (const [key, value] of formData.entries()) {
          if (value && value.toString().trim()) {
            params.append(key, value.toString());
          }
        }
        
        // Reset to page 1 when applying new filters
        params.set('page', '1');
        
        window.location.href = `/guides?${params.toString()}`;
      });
    }

    if (clearFiltersBtn) {
      clearFiltersBtn.addEventListener('click', function() {
        window.location.href = '/guides';
      });
    }

    if (clearAllFiltersBtn) {
      clearAllFiltersBtn.addEventListener('click', function() {
        window.location.href = '/guides';
      });
    }

    // Auto-submit on select changes for better UX
    const selectInputs = filterForm?.querySelectorAll('select');
    selectInputs?.forEach(select => {
      select.addEventListener('change', function() {
        if (filterForm instanceof HTMLFormElement) {
          filterForm.dispatchEvent(new Event('submit'));
        }
      });
    });
  });
</script>

