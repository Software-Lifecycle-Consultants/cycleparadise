    <!-- SEO Meta Tags -->
    <meta name="keywords" content={allKeywords.join(', ')} />
    {author && <meta name="author" content={author} />}
    <meta
      name="robots"
      content={noIndex
        ? 'noindex, nofollow'
        : 'index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1'}
    />
