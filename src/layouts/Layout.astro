            <!-- Mobile menu button -->
            <div class="md:hidden">
              <button 
                type="button" 
                class="text-gray-600 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-primary-500"
                aria-label="Open mobile menu"
                id="mobile-menu-button"
