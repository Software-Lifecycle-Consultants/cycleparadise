---
export interface Props {
  title: string;
  description?: string;
  canonicalUrl?: string;
  ogImage?: string;
  ogType?: 'website' | 'article' | 'product' | 'profile';
  keywords?: string[];
  author?: string;
  publishedTime?: string;
  modifiedTime?: string;
  structuredData?: any;
  noIndex?: boolean;
  alternateUrls?: { hreflang: string; href: string }[];
}

const {
  title,
  description,
  canonicalUrl,
  ogImage,
  ogType = 'website',
  keywords = [],
  author,
  publishedTime,
  modifiedTime,
  structuredData,
  noIndex = false,
  alternateUrls = [],
} = Astro.props;

const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://cycleparadise.lk';
const currentUrl = canonicalUrl || `${siteUrl}${Astro.url.pathname}`;
const defaultOgImage = `${siteUrl}/images/og-default.jpg`;
const finalOgImage = ogImage || defaultOgImage;

// Default keywords for cycling tours
const defaultKeywords = [
  'cycling tours sri lanka',
  'bicycle tours',
  'cycling holidays',
  'adventure travel',
  'eco tourism',
  'guided cycling tours',
  'sri lanka tourism',
];

const allKeywords = [...new Set([...keywords, ...defaultKeywords])];

// Generate breadcrumb structured data
const breadcrumbItems = [];
const pathSegments = Astro.url.pathname.split('/').filter(Boolean);
let currentPath = '';

breadcrumbItems.push({
  '@type': 'ListItem',
  position: 1,
  name: 'Home',
  item: siteUrl,
});

pathSegments.forEach((segment, index) => {
  currentPath += '/' + segment;
  breadcrumbItems.push({
    '@type': 'ListItem',
    position: index + 2,
    name: segment.charAt(0).toUpperCase() + segment.slice(1).replace('-', ' '),
    item: siteUrl + currentPath,
  });
});

const breadcrumbStructuredData = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: breadcrumbItems,
};

// Organization structured data
const organizationStructuredData = {
  '@context': 'https://schema.org',
  '@type': 'TravelAgency',
  name: 'Cycle Paradise',
  description: 'Premium cycling tours and adventures across Sri Lanka',
  url: siteUrl,
  logo: `${siteUrl}/images/logo.png`,
  image: finalOgImage,
  telephone: '+94-77-123-4567',
  email: 'info@cycleparadise.lk',
  address: {
    '@type': 'PostalAddress',
    addressCountry: 'LK',
    addressLocality: 'Colombo',
    addressRegion: 'Western Province',
  },
  geo: {
    '@type': 'GeoCoordinates',
    latitude: '6.9271',
    longitude: '79.8612',
  },
  sameAs: [
    'https://www.facebook.com/cycleparadise',
    'https://www.instagram.com/cycleparadise',
    'https://www.twitter.com/cycleparadise',
  ],
  priceRange: '$$',
  servesCuisine: 'Cycling Tours',
  hasOfferCatalog: {
    '@type': 'OfferCatalog',
    name: 'Cycling Tour Packages',
    itemListElement: [
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'TouristTrip',
          name: 'Hill Country Cycling Tours',
        },
      },
      {
        '@type': 'Offer',
        itemOffered: {
          '@type': 'TouristTrip',
          name: 'Coastal Cycling Adventures',
        },
      },
    ],
  },
};

// Combine all structured data
const combinedStructuredData = [
  organizationStructuredData,
  breadcrumbStructuredData,
  ...(structuredData ? [structuredData] : []),
];
