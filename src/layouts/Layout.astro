    <!-- Canonical URL -->
    <link rel="canonical" href={currentUrl} />

    <!-- Alternate Languages -->
    {
      alternateUrls.map(({ hreflang, href }) => (
        <link rel="alternate" hreflang={hreflang} href={href} />
      ))
    }

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
