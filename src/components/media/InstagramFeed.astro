    <a
      href="https://instagram.com/cycleparadise"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center text-primary-600 hover:text-primary-700 font-semibold"
    >
      Visit Instagram
      <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
      </svg>
    </a>
  </div>
</div>

<script>
  // Instagram feed enhancement script
  // This would integrate with Instagram Basic Display API in a real implementation
  document.addEventListener('DOMContentLoaded', function () {
    const instagramFeed = document.querySelector('.instagram-feed');
    if (!instagramFeed) return;

