---
import instagramService, { type InstagramPost } from '../../lib/services/instagram.js';

export interface Props {
  hashtag?: string;
  limit?: number;
  className?: string;
  title?: string;
  userId?: string;
}

const { 
  hashtag = 'cycleparadise', 
  limit = 6, 
  className = '', 
  title = 'Follow Our Adventures',
  userId = 'me'
} = Astro.props;

// Fetch Instagram posts
let instagramPosts: InstagramPost[] = [];
let hasError = false;

try {
  if (hashtag && hashtag !== 'cycleparadise') {
    // Try to get posts by hashtag (falls back to user posts in our implementation)
    instagramPosts = await instagramService.getHashtagPosts(hashtag, limit);
  } else {
    // Get user's posts
    instagramPosts = await instagramService.getUserPosts(userId, limit);
  }
} catch (error) {
  console.error('Failed to load Instagram posts:', error);
  hasError = true;
  instagramPosts = [];
}

// Transform Instagram posts to our component format
const posts = instagramPosts.map(post => ({
  id: post.id,
  imageUrl: post.media_url,
  caption: post.caption || `Follow our cycling adventures in Sri Lanka! #${hashtag} #cycling #srilanka`,
  timestamp: post.timestamp,
  permalink: post.permalink,
  mediaType: post.media_type
}));
