---
import instagramService, { type InstagramPost } from '../../lib/services/instagram.js';

export interface Props {
  hashtag?: string;
  limit?: number;
  className?: string;
  title?: string;
  userId?: string;
}

const {
  hashtag = 'cycleparadise',
  limit = 6,
  className = '',
  title = 'Follow Our Adventures',
  userId = 'me',
} = Astro.props;

// Fetch Instagram posts
let instagramPosts: InstagramPost[] = [];
let hasError = false;

try {
  if (hashtag && hashtag !== 'cycleparadise') {
    // Try to get posts by hashtag (falls back to user posts in our implementation)
    instagramPosts = await instagramService.getHashtagPosts(hashtag, limit);
  } else {
    // Get user's posts
    instagramPosts = await instagramService.getUserPosts(userId, limit);
  }
} catch (error) {
  console.error('Failed to load Instagram posts:', error);
  hasError = true;
  instagramPosts = [];
}

// Transform Instagram posts to our component format
const posts = instagramPosts.map((post) => ({
  id: post.id,
  imageUrl: post.media_url,
  caption:
    post.caption || `Follow our cycling adventures in Sri Lanka! #${hashtag} #cycling #srilanka`,
  timestamp: post.timestamp,
  permalink: post.permalink,
  mediaType: post.media_type,
}));
---

<div class={`instagram-feed max-h-screen overflow-hidden ${className}`}>
  {
    title && (
      <div class="mb-12">
        <p class="text-xs font-semibold tracking-widest text-gray-500 uppercase mb-4">
          Follow Our Adventures
        </p>
        <div class="flex flex-col sm:flex-row sm:items-end sm:justify-between">
          <div class="flex items-center gap-6">
            <div>
              <h2 class="font-display font-semibold text-3xl text-gray-900 sm:text-4xl mb-3">
                {title}
              </h2>
              <p class="text-sm text-gray-600">
                Join our journey on Instagram{' '}
                <a
                  href="https://instagram.com/cycleparadise"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-primary-600 hover:text-primary-700 font-semibold transition-colors"
                >
                  @cycleparadise
                </a>
              </p>
            </div>
            {/* Instagram Profile Picture with Gradient Border */}
            <div class="relative">
              <div class="w-20 h-20 rounded-full bg-gradient-to-tr from-yellow-400 via-pink-500 to-purple-600 p-0.5">
                <div class="w-full h-full rounded-full bg-white p-1">
                  <div class="w-full h-full rounded-full bg-primary-600 flex items-center justify-center">
                    <span class="text-white font-bold text-xl">CP</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <a
            href="https://instagram.com/cycleparadise"
            target="_blank"
            rel="noopener noreferrer"
            class="hidden sm:inline-flex mt-4 sm:mt-0 items-center text-sm font-semibold text-primary-600 hover:text-primary-700 transition-colors group"
          >
            Follow Us
            <svg
              class="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"
              />
            </svg>
