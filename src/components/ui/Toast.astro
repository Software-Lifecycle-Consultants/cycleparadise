<!-- Toast Container (fixed at top-right) -->
<div id="toast-container" class="fixed top-20 right-4 z-50 space-y-3 max-w-md w-full pointer-events-none">
  <!-- Toasts will be injected here dynamically -->
</div>

<script>
  // Toast types and their styling
  const toastStyles = {
    success: {
      bg: 'bg-green-50',
      border: 'border-green-200',
      icon: 'text-green-600',
      text: 'text-green-800',
      iconPath: 'M5 13l4 4L19 7' // checkmark
    },
    error: {
      bg: 'bg-red-50',
      border: 'border-red-200',
      icon: 'text-red-600',
      text: 'text-red-800',
      iconPath: 'M6 18L18 6M6 6l12 12' // X mark
    },
    warning: {
      bg: 'bg-yellow-50',
      border: 'border-yellow-200',
      icon: 'text-yellow-600',
      text: 'text-yellow-800',
      iconPath: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z' // warning triangle
    },
    info: {
      bg: 'bg-blue-50',
      border: 'border-blue-200',
      icon: 'text-blue-600',
      text: 'text-blue-800',
      iconPath: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z' // info circle
    }
  };

  // Toast manager interface
  interface ToastOptions {
    message: string;
    type?: 'success' | 'error' | 'warning' | 'info';
    duration?: number;
  }

  // Create toast element
  function createToast({ message, type = 'info', duration = 4000 }: ToastOptions): HTMLElement {
    const style = toastStyles[type];
    const toastId = `toast-${Date.now()}-${Math.random()}`;

    const toast = document.createElement('div');
    toast.id = toastId;
    toast.className = `${style.bg} ${style.border} border rounded-lg shadow-lg p-4 pointer-events-auto transform translate-x-full transition-transform duration-300 ease-out`;

    toast.innerHTML = `
      <div class="flex items-start space-x-3">
        <div class="flex-shrink-0">
          <svg class="w-5 h-5 ${style.icon}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="${style.iconPath}"></path>
          </svg>
        </div>
        <div class="flex-1 ${style.text} text-sm font-medium">
          ${message}
        </div>
        <button type="button" class="flex-shrink-0 ${style.icon} hover:opacity-70 transition" onclick="window.toastManager.dismiss('${toastId}')">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    `;

    return toast;
  }

  // Toast manager singleton
  const toastManager = {
    show({ message, type = 'info', duration = 4000 }: ToastOptions) {
      const container = document.getElementById('toast-container');
      if (!container) return;

      const toast = createToast({ message, type, duration });
      container.appendChild(toast);

      // Trigger slide-in animation
      setTimeout(() => {
        toast.classList.remove('translate-x-full');
      }, 10);

      // Auto-dismiss
      if (duration > 0) {
        setTimeout(() => {
          this.dismiss(toast.id);
        }, duration);
      }

      return toast.id;
    },

    dismiss(toastId: string) {
      const toast = document.getElementById(toastId);
      if (!toast) return;

      // Slide out
      toast.classList.add('translate-x-full');

      // Remove from DOM after animation
      setTimeout(() => {
        toast.remove();
      }, 300);
    },

    success(message: string, duration?: number) {
      return this.show({ message, type: 'success', duration });
    },

    error(message: string, duration?: number) {
      return this.show({ message, type: 'error', duration });
    },

    warning(message: string, duration?: number) {
      return this.show({ message, type: 'warning', duration });
    },

    info(message: string, duration?: number) {
      return this.show({ message, type: 'info', duration });
    }
  };

  // Make toast manager globally available
  (window as any).toastManager = toastManager;
</script>
