---
interface MediaImage {
  url: string;
  alt: string;
}

interface MediaGallery {
  images?: MediaImage[];
}

interface Props {
  data?: MediaGallery;
}

const { data = {} } = Astro.props;
const uniqueId = `media-gallery-editor-${Math.random().toString(36).substr(2, 9)}`;
const images = data.images || [];
---

<div class="media-gallery-editor-container">
  <label class="block text-sm font-medium text-gray-700 mb-2">
    Media Gallery
    <span class="text-gray-500 font-normal">(Optional)</span>
  </label>

  <div class="space-y-4" id={`${uniqueId}-items`}>
    {
      images.map((image, index) => (
        <div class="border border-gray-200 rounded-lg p-4 bg-gray-50" data-image-item>
          <div class="flex justify-between items-center mb-3">
            <h4 class="font-medium text-gray-700">
              Image #<span data-image-number>{index + 1}</span>
            </h4>
            <button type="button" class="text-red-600 hover:text-red-800 text-sm" data-remove-item>
              Remove
            </button>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="col-span-2 md:col-span-1">
              <label class="block text-xs font-medium text-gray-500 mb-1">Image URL</label>
              <input
                type="url"
                value={image.url}
                placeholder="https://example.com/image.jpg"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                data-field="url"
              />
            </div>

            <div class="col-span-2 md:col-span-1">
              <label class="block text-xs font-medium text-gray-500 mb-1">Alt Text</label>
              <input
                type="text"
                value={image.alt}
                placeholder="Description of the image"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                data-field="alt"
              />
            </div>

            {image.url && (
              <div class="col-span-2">
                <label class="block text-xs font-medium text-gray-500 mb-1">Preview</label>
                <img
                  src={image.url}
                  alt={image.alt}
                  class="w-full max-w-xs h-40 object-cover rounded-lg border border-gray-200"
                  onerror="this.style.display='none'"
                />
              </div>
            )}
          </div>
        </div>
      ))
    }
  </div>

  <button
    type="button"
    id={`${uniqueId}-add-btn`}
    class="mt-3 px-4 py-2 bg-emerald-100 text-emerald-700 hover:bg-emerald-200 rounded-lg transition inline-flex items-center space-x-2"
  >
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"
      ></path>
    </svg>
    <span>Add Image</span>
  </button>

  <!-- Hidden input for form submission -->
  <input type="hidden" name="mediaGallery-json" id={`${uniqueId}-json`} value="" />
</div>

<script define:vars={{ uniqueId }}>
  // Register serializer
  if (typeof window !== 'undefined') {
    if (!window.mediaGalleryEditorSerializers) {
      window.mediaGalleryEditorSerializers = {};
    }

    window.mediaGalleryEditorSerializers['mediaGallery'] = function () {
      const container = document.getElementById(`${uniqueId}-items`);
      const items = container ? container.querySelectorAll('[data-image-item]') : [];
      const images = [];

      items.forEach((item) => {
        const url = item.querySelector('[data-field="url"]').value.trim();
        const alt = item.querySelector('[data-field="alt"]').value.trim();

        if (url && alt) {
          images.push({
            url,
            alt,
          });
        }
      });

      // Return object with images array if there are images, otherwise null
      return images.length > 0 ? { images } : null;
    };
  }

  document.addEventListener('DOMContentLoaded', function () {
    const container = document.getElementById(`${uniqueId}-items`);
    const addBtn = document.getElementById(`${uniqueId}-add-btn`);

    if (!container || !addBtn) {
      return;
    }

    function updateImageNumbers() {
      const items = container.querySelectorAll('[data-image-item]');
      items.forEach((item, index) => {
        const numberSpan = item.querySelector('[data-image-number]');
        if (numberSpan) {
          numberSpan.textContent = index + 1;
        }
      });
    }

    // Add item functionality
    addBtn.addEventListener('click', () => {
      const newItem = document.createElement('div');
      newItem.className = 'border border-gray-200 rounded-lg p-4 bg-gray-50';
      newItem.setAttribute('data-image-item', '');

      const currentCount = container.querySelectorAll('[data-image-item]').length;

      newItem.innerHTML = `
        <div class="flex justify-between items-center mb-3">
          <h4 class="font-medium text-gray-700">Image #<span data-image-number>${currentCount + 1}</span></h4>
          <button
            type="button"
            class="text-red-600 hover:text-red-800 text-sm"
            data-remove-item
          >
            Remove
          </button>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="col-span-2 md:col-span-1">
            <label class="block text-xs font-medium text-gray-500 mb-1">Image URL</label>
            <input
              type="url"
              placeholder="https://example.com/image.jpg"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
              data-field="url"
            />
          </div>
          
          <div class="col-span-2 md:col-span-1">
            <label class="block text-xs font-medium text-gray-500 mb-1">Alt Text</label>
            <input
              type="text"
              placeholder="Description of the image"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
              data-field="alt"
            />
          </div>
        </div>
      `;

      // Attach remove event to new button
      const removeBtn = newItem.querySelector('[data-remove-item]');
      if (removeBtn) {
        removeBtn.addEventListener('click', () => {
          newItem.remove();
          updateImageNumbers();
        });
      }

      container.appendChild(newItem);
    });

    // Remove item functionality for existing items
    container.querySelectorAll('[data-remove-item]').forEach((btn) => {
      btn.addEventListener('click', (e) => {
        const target = e.target;
        const item = target.closest('[data-image-item]');
        if (item) {
          item.remove();
          updateImageNumbers();
        }
      });
    });
  });
</script>
