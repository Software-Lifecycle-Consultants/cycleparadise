---
interface Review {
  author: string;
  role?: string;
  rating?: number;
  date?: string;
  content: string;
}

interface Props {
  reviews?: Review[];
}

const { reviews = [] } = Astro.props;
const uniqueId = `reviews-editor-${Math.random().toString(36).substr(2, 9)}`;
---

<div class="reviews-editor-container">
  <label class="block text-sm font-medium text-gray-700 mb-2">
    Customer Reviews
    <span class="text-gray-500 font-normal">(Optional)</span>
  </label>

  <div class="space-y-4" id={`${uniqueId}-items`}>
    {
      reviews.map((review, index) => (
        <div class="border border-gray-200 rounded-lg p-4 bg-gray-50" data-review-item>
          <div class="flex justify-between items-center mb-3">
            <h4 class="font-medium text-gray-700">
              Review #<span data-review-number>{index + 1}</span>
            </h4>
            <button type="button" class="text-red-600 hover:text-red-800 text-sm" data-remove-item>
              Remove
            </button>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="col-span-2 md:col-span-1">
              <label class="block text-xs font-medium text-gray-500 mb-1">Author</label>
              <input
                type="text"
                value={review.author}
                placeholder="e.g. John Doe"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                data-field="author"
              />
            </div>

            <div class="col-span-2 md:col-span-1">
              <label class="block text-xs font-medium text-gray-500 mb-1">Role (Optional)</label>
              <input
                type="text"
                value={review.role || ''}
                placeholder="e.g. Verified Traveler"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                data-field="role"
              />
            </div>

            <div class="col-span-2 md:col-span-1">
              <label class="block text-xs font-medium text-gray-500 mb-1">Rating (1-5)</label>
              <input
                type="number"
                min="1"
                max="5"
                step="0.1"
                value={review.rating || ''}
                placeholder="e.g. 5"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                data-field="rating"
              />
            </div>

            <div class="col-span-2 md:col-span-1">
              <label class="block text-xs font-medium text-gray-500 mb-1">Date (Optional)</label>
              <input
                type="date"
                value={review.date ? new Date(review.date).toISOString().split('T')[0] : ''}
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                data-field="date"
              />
            </div>

            <div class="col-span-2">
              <label class="block text-xs font-medium text-gray-500 mb-1">Content</label>
              <textarea
                rows="3"
                placeholder="Review content..."
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                data-field="content"
              >
                {review.content}
              </textarea>
            </div>
          </div>
        </div>
      ))
    }
  </div>

  <button
    type="button"
    id={`${uniqueId}-add-btn`}
    class="mt-3 px-4 py-2 bg-emerald-100 text-emerald-700 hover:bg-emerald-200 rounded-lg transition inline-flex items-center space-x-2"
  >
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"
      ></path>
    </svg>
    <span>Add Review</span>
  </button>

  <!-- Hidden input for form submission -->
  <input type="hidden" name="reviews-json" id={`${uniqueId}-json`} value="" />
</div>

<script define:vars={{ uniqueId }}>
  // Register serializer
  if (typeof window !== 'undefined') {
    if (!window.reviewsEditorSerializers) {
      window.reviewsEditorSerializers = {};
    }

    window.reviewsEditorSerializers['reviews'] = function () {
      const container = document.getElementById(`${uniqueId}-items`);
      const items = container ? container.querySelectorAll('[data-review-item]') : [];
      const values = [];

      items.forEach((item) => {
        const author = item.querySelector('[data-field="author"]').value.trim();
        const role = item.querySelector('[data-field="role"]').value.trim();
        const ratingVal = item.querySelector('[data-field="rating"]').value.trim();
        const dateVal = item.querySelector('[data-field="date"]').value;
        const content = item.querySelector('[data-field="content"]').value.trim();

        if (author && content) {
          values.push({
            author,
            role: role || undefined,
            rating: ratingVal ? parseFloat(ratingVal) : undefined,
            date: dateVal ? new Date(dateVal).toISOString() : undefined,
            content,
          });
        }
      });

      return values.length > 0 ? values : null;
    };
  }

  document.addEventListener('DOMContentLoaded', function () {
    const container = document.getElementById(`${uniqueId}-items`);
    const addBtn = document.getElementById(`${uniqueId}-add-btn`);

    if (!container || !addBtn) {
      return;
    }

    function updateReviewNumbers() {
      const items = container.querySelectorAll('[data-review-item]');
      items.forEach((item, index) => {
        const numberSpan = item.querySelector('[data-review-number]');
        if (numberSpan) {
          numberSpan.textContent = index + 1;
        }
      });
    }

    // Add item functionality
    addBtn.addEventListener('click', () => {
      const newItem = document.createElement('div');
      newItem.className = 'border border-gray-200 rounded-lg p-4 bg-gray-50';
      newItem.setAttribute('data-review-item', '');

      const currentCount = container.querySelectorAll('[data-review-item]').length;

      newItem.innerHTML = `
        <div class="flex justify-between items-center mb-3">
          <h4 class="font-medium text-gray-700">Review #<span data-review-number>${currentCount + 1}</span></h4>
          <button
            type="button"
            class="text-red-600 hover:text-red-800 text-sm"
            data-remove-item
          >
            Remove
          </button>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="col-span-2 md:col-span-1">
            <label class="block text-xs font-medium text-gray-500 mb-1">Author</label>
            <input
              type="text"
              placeholder="e.g. John Doe"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
              data-field="author"
            />
          </div>
          
          <div class="col-span-2 md:col-span-1">
            <label class="block text-xs font-medium text-gray-500 mb-1">Role (Optional)</label>
            <input
              type="text"
              placeholder="e.g. Verified Traveler"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
              data-field="role"
            />
          </div>

          <div class="col-span-2 md:col-span-1">
            <label class="block text-xs font-medium text-gray-500 mb-1">Rating (1-5)</label>
            <input
              type="number"
              min="1"
              max="5"
              step="0.1"
              placeholder="e.g. 5"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
              data-field="rating"
            />
          </div>

          <div class="col-span-2 md:col-span-1">
            <label class="block text-xs font-medium text-gray-500 mb-1">Date (Optional)</label>
            <input
              type="date"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
              data-field="date"
            />
          </div>

          <div class="col-span-2">
            <label class="block text-xs font-medium text-gray-500 mb-1">Content</label>
            <textarea
              rows="3"
              placeholder="Review content..."
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
              data-field="content"
            ></textarea>
          </div>
        </div>
      `;

      // Attach remove event to new button
      const removeBtn = newItem.querySelector('[data-remove-item]');
      if (removeBtn) {
        removeBtn.addEventListener('click', () => {
          newItem.remove();
          updateReviewNumbers();
        });
      }

      container.appendChild(newItem);
    });

    // Remove item functionality for existing items
    container.querySelectorAll('[data-remove-item]').forEach((btn) => {
      btn.addEventListener('click', (e) => {
        const target = e.target;
        const item = target.closest('[data-review-item]');
        if (item) {
          item.remove();
          updateReviewNumbers();
        }
      });
    });
  });
</script>
