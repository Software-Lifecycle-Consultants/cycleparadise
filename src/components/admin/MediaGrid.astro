---
interface Props {
  initialAssets?: any[];
}

const { initialAssets = [] } = Astro.props;
---

<div id="media-grid" class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-4 mt-6">
  {
    initialAssets.map((asset) => (
      <div
        class="group relative aspect-square bg-gray-100 rounded-lg overflow-hidden border border-gray-200"
        data-id={asset.id}
      >
        <img
          src={asset.url}
          alt={asset.altText || asset.filename}
          class="w-full h-full object-cover"
          loading="lazy"
        />
        
        <!-- Overlay -->
        <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-40 transition-opacity flex items-center justify-center opacity-0 group-hover:opacity-100">
          <div class="flex space-x-2">
            <button
              class="copy-btn p-2 bg-white rounded-full text-gray-700 hover:text-emerald-600 shadow-sm"
              title="Copy URL"
              data-url={asset.url}
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
            </button>
            <button
              class="delete-btn p-2 bg-white rounded-full text-gray-700 hover:text-red-600 shadow-sm"
              title="Delete"
              data-id={asset.id}
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <!-- Info -->
        <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white text-xs p-1 truncate px-2 opacity-0 group-hover:opacity-100 transition-opacity">
          {asset.filename}
        </div>
      </div>
    ))
  }
</div>

<!-- Empty State -->
<div id="empty-state" class:list={['text-center py-12 text-gray-500', initialAssets.length > 0 ? 'hidden' : '']}>
  <svg class="w-12 h-12 mx-auto text-gray-300 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
  </svg>
  <p>No media assets found</p>
</div>

<script>
  const mediaGrid = document.getElementById('media-grid');
  const emptyState = document.getElementById('empty-state');

  // Load assets function
  async function loadAssets() {
    try {
      const response = await fetch('/api/admin/media?limit=50'); // Simple fetch for now
      const data = await response.json();
      
      if (data.data) {
        renderAssets(data.data);
      }
    } catch (error) {
      console.error('Error loading assets:', error);
    }
  }

  function renderAssets(assets: any[]) {
    if (!mediaGrid) return;
    
    mediaGrid.innerHTML = assets.map((asset: any) => `
      <div class="group relative aspect-square bg-gray-100 rounded-lg overflow-hidden border border-gray-200" data-id="${asset.id}">
        <img src="${asset.url}" alt="${asset.altText || asset.filename}" class="w-full h-full object-cover" loading="lazy">
        <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-40 transition-opacity flex items-center justify-center opacity-0 group-hover:opacity-100">
          <div class="flex space-x-2">
            <button class="copy-btn p-2 bg-white rounded-full text-gray-700 hover:text-emerald-600 shadow-sm" title="Copy URL" data-url="${asset.url}">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>
            </button>
            <button class="delete-btn p-2 bg-white rounded-full text-gray-700 hover:text-red-600 shadow-sm" title="Delete" data-id="${asset.id}">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
            </button>
          </div>
        </div>
        <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-50 text-white text-xs p-1 truncate px-2 opacity-0 group-hover:opacity-100 transition-opacity">
          ${asset.filename}
        </div>
      </div>
    `).join('');

    if (assets.length === 0) {
      emptyState?.classList.remove('hidden');
    } else {
      emptyState?.classList.add('hidden');
    }
    
    attachEventListeners();
  }

  function attachEventListeners() {
    // Copy URL
    document.querySelectorAll('.copy-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        const url = (e.currentTarget as HTMLElement).dataset.url;
        if (url) {
          navigator.clipboard.writeText(url);
          // Ideally show a toast here
          alert('URL copied to clipboard!');
        }
      });
    });

    // Delete
    document.querySelectorAll('.delete-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        e.stopPropagation();
        if (!confirm('Are you sure you want to delete this image?')) return;

        const id = (e.currentTarget as HTMLElement).dataset.id;
        try {
          const res = await fetch(`/api/admin/media/${id}/delete`, { method: 'DELETE' });
          if (res.ok) {
            loadAssets(); // Reload
          } else {
            alert('Failed to delete image');
          }
        } catch (err) {
          console.error(err);
          alert('Error deleting image');
        }
      });
    });
  }

  // Listen for uploads
  window.addEventListener('media-uploaded', () => {
    loadAssets();
  });

  // Initial attach for server-rendered items
  attachEventListeners();
</script>
