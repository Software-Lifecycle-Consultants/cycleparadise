---
interface SupportContact {
  label: string;
  value: string;
  href?: string;
}

interface Props {
  contacts?: SupportContact[];
}

const { contacts = [] } = Astro.props;
const uniqueId = `support-contacts-editor-${Math.random().toString(36).substr(2, 9)}`;
---

<div class="support-contacts-editor-container">
  <label class="block text-sm font-medium text-gray-700 mb-2">
    Support Contacts
    <span class="text-gray-500 font-normal">(Optional)</span>
  </label>

  <div class="space-y-4" id={`${uniqueId}-items`}>
    {
      contacts.map((contact, index) => (
        <div class="border border-gray-200 rounded-lg p-4 bg-gray-50" data-contact-item>
          <div class="flex justify-between items-center mb-3">
            <h4 class="font-medium text-gray-700">
              Contact #<span data-contact-number>{index + 1}</span>
            </h4>
            <button type="button" class="text-red-600 hover:text-red-800 text-sm" data-remove-item>
              Remove
            </button>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Label</label>
              <input
                type="text"
                value={contact.label}
                placeholder="e.g. Email"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                data-field="label"
              />
            </div>

            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Value</label>
              <input
                type="text"
                value={contact.value}
                placeholder="e.g. info@example.com"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                data-field="value"
              />
            </div>

            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Link (Optional)</label>
              <input
                type="text"
                value={contact.href || ''}
                placeholder="e.g. mailto:info@example.com"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                data-field="href"
              />
            </div>
          </div>
        </div>
      ))
    }
  </div>

  <button
    type="button"
    id={`${uniqueId}-add-btn`}
    class="mt-3 px-4 py-2 bg-emerald-100 text-emerald-700 hover:bg-emerald-200 rounded-lg transition inline-flex items-center space-x-2"
  >
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"
      ></path>
    </svg>
    <span>Add Contact</span>
  </button>

  <!-- Hidden input for form submission -->
  <input type="hidden" name="supportContacts-json" id={`${uniqueId}-json`} value="" />
</div>

<script define:vars={{ uniqueId }}>
  // Register serializer
  if (typeof window !== 'undefined') {
    if (!window.supportContactsEditorSerializers) {
      window.supportContactsEditorSerializers = {};
    }

    window.supportContactsEditorSerializers['supportContacts'] = function () {
      const container = document.getElementById(`${uniqueId}-items`);
      const items = container ? container.querySelectorAll('[data-contact-item]') : [];
      const values = [];

      items.forEach((item) => {
        const label = item.querySelector('[data-field="label"]').value.trim();
        const value = item.querySelector('[data-field="value"]').value.trim();
        const href = item.querySelector('[data-field="href"]').value.trim();

        if (label && value) {
          values.push({
            label,
            value,
            href: href || undefined,
          });
        }
      });

      return values.length > 0 ? values : null;
    };
  }

  document.addEventListener('DOMContentLoaded', function () {
    const container = document.getElementById(`${uniqueId}-items`);
    const addBtn = document.getElementById(`${uniqueId}-add-btn`);

    if (!container || !addBtn) {
      return;
    }

    function updateContactNumbers() {
      const items = container.querySelectorAll('[data-contact-item]');
      items.forEach((item, index) => {
        const numberSpan = item.querySelector('[data-contact-number]');
        if (numberSpan) {
          numberSpan.textContent = index + 1;
        }
      });
    }

    // Add item functionality
    addBtn.addEventListener('click', () => {
      const newItem = document.createElement('div');
      newItem.className = 'border border-gray-200 rounded-lg p-4 bg-gray-50';
      newItem.setAttribute('data-contact-item', '');

      const currentCount = container.querySelectorAll('[data-contact-item]').length;

      newItem.innerHTML = `
        <div class="flex justify-between items-center mb-3">
          <h4 class="font-medium text-gray-700">Contact #<span data-contact-number>${currentCount + 1}</span></h4>
          <button
            type="button"
            class="text-red-600 hover:text-red-800 text-sm"
            data-remove-item
          >
            Remove
          </button>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">Label</label>
            <input
              type="text"
              placeholder="e.g. Email"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
              data-field="label"
            />
          </div>
          
          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">Value</label>
            <input
              type="text"
              placeholder="e.g. info@example.com"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
              data-field="value"
            />
          </div>

          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">Link (Optional)</label>
            <input
              type="text"
              placeholder="e.g. mailto:info@example.com"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
              data-field="href"
            />
          </div>
        </div>
      `;

      // Attach remove event to new button
      const removeBtn = newItem.querySelector('[data-remove-item]');
      if (removeBtn) {
        removeBtn.addEventListener('click', () => {
          newItem.remove();
          updateContactNumbers();
        });
      }

      container.appendChild(newItem);
    });

    // Remove item functionality for existing items
    container.querySelectorAll('[data-remove-item]').forEach((btn) => {
      btn.addEventListener('click', (e) => {
        const target = e.target;
        const item = target.closest('[data-contact-item]');
        if (item) {
          item.remove();
          updateContactNumbers();
        }
      });
    });
  });
</script>
