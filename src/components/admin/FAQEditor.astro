---
interface FAQ {
  question: string;
  answer: string;
}

interface Props {
  faqs?: FAQ[];
}

const { faqs = [] } = Astro.props;
const uniqueId = `faq-editor-${Math.random().toString(36).substr(2, 9)}`;
---

<div class="faq-editor-container">
  <label class="block text-sm font-medium text-gray-700 mb-2">
    Frequently Asked Questions
    <span class="text-gray-500 font-normal">(Optional)</span>
  </label>

  <div class="space-y-4" id={`${uniqueId}-items`}>
    {
      faqs.map((faq, index) => (
        <div class="border border-gray-200 rounded-lg p-4 bg-gray-50" data-faq-item>
          <div class="flex justify-between items-center mb-3">
            <h4 class="font-medium text-gray-700">
              FAQ #<span data-faq-number>{index + 1}</span>
            </h4>
            <button type="button" class="text-red-600 hover:text-red-800 text-sm" data-remove-item>
              Remove
            </button>
          </div>

          <div class="space-y-3">
            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Question</label>
              <input
                type="text"
                value={faq.question}
                placeholder="e.g. What is the cancellation policy?"
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                data-field="question"
              />
            </div>

            <div>
              <label class="block text-xs font-medium text-gray-500 mb-1">Answer</label>
              <textarea
                rows="3"
                placeholder="Enter the answer..."
                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
                data-field="answer"
              >
                {faq.answer}
              </textarea>
            </div>
          </div>
        </div>
      ))
    }
  </div>

  <button
    type="button"
    id={`${uniqueId}-add-btn`}
    class="mt-3 px-4 py-2 bg-emerald-100 text-emerald-700 hover:bg-emerald-200 rounded-lg transition inline-flex items-center space-x-2"
  >
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"
      ></path>
    </svg>
    <span>Add FAQ</span>
  </button>

  <!-- Hidden input for form submission -->
  <input type="hidden" name="faqs-json" id={`${uniqueId}-json`} value="" />
</div>

<script define:vars={{ uniqueId }}>
  // Register serializer
  if (typeof window !== 'undefined') {
    if (!window.faqEditorSerializers) {
      window.faqEditorSerializers = {};
    }

    window.faqEditorSerializers['faqs'] = function () {
      const container = document.getElementById(`${uniqueId}-items`);
      const items = container ? container.querySelectorAll('[data-faq-item]') : [];
      const values = [];

      items.forEach((item) => {
        const question = item.querySelector('[data-field="question"]').value.trim();
        const answer = item.querySelector('[data-field="answer"]').value.trim();

        if (question && answer) {
          values.push({
            question,
            answer,
          });
        }
      });

      return values.length > 0 ? values : null;
    };
  }

  document.addEventListener('DOMContentLoaded', function () {
    const container = document.getElementById(`${uniqueId}-items`);
    const addBtn = document.getElementById(`${uniqueId}-add-btn`);

    if (!container || !addBtn) {
      return;
    }

    function updateFaqNumbers() {
      const items = container.querySelectorAll('[data-faq-item]');
      items.forEach((item, index) => {
        const numberSpan = item.querySelector('[data-faq-number]');
        if (numberSpan) {
          numberSpan.textContent = index + 1;
        }
      });
    }

    // Add item functionality
    addBtn.addEventListener('click', () => {
      const newItem = document.createElement('div');
      newItem.className = 'border border-gray-200 rounded-lg p-4 bg-gray-50';
      newItem.setAttribute('data-faq-item', '');

      const currentCount = container.querySelectorAll('[data-faq-item]').length;

      newItem.innerHTML = `
        <div class="flex justify-between items-center mb-3">
          <h4 class="font-medium text-gray-700">FAQ #<span data-faq-number>${currentCount + 1}</span></h4>
          <button
            type="button"
            class="text-red-600 hover:text-red-800 text-sm"
            data-remove-item
          >
            Remove
          </button>
        </div>
        
        <div class="space-y-3">
          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">Question</label>
            <input
              type="text"
              placeholder="e.g. What is the cancellation policy?"
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
              data-field="question"
            />
          </div>
          
          <div>
            <label class="block text-xs font-medium text-gray-500 mb-1">Answer</label>
            <textarea
              rows="3"
              placeholder="Enter the answer..."
              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
              data-field="answer"
            ></textarea>
          </div>
        </div>
      `;

      // Attach remove event to new button
      const removeBtn = newItem.querySelector('[data-remove-item]');
      if (removeBtn) {
        removeBtn.addEventListener('click', () => {
          newItem.remove();
          updateFaqNumbers();
        });
      }

      container.appendChild(newItem);
    });

    // Remove item functionality for existing items
    container.querySelectorAll('[data-remove-item]').forEach((btn) => {
      btn.addEventListener('click', (e) => {
        const target = e.target;
        const item = target.closest('[data-faq-item]');
        if (item) {
          item.remove();
          updateFaqNumbers();
        }
      });
    });
  });
</script>
