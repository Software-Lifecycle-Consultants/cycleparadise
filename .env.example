# Database Configuration
# For Docker Compose PostgreSQL, use:
# DATABASE_URL="postgresql://cycleparadise:cycleparadise_dev@localhost:5432/cycleparadise"
# For custom setup, change user:password@host:port/database as needed
DATABASE_URL="postgresql://user:password@localhost:5432/cycleparadise_dev"
DIRECT_URL="postgresql://user:password@localhost:5432/cycleparadise_dev"

# Authentication
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"
ADMIN_EMAIL="admin@cycleparadise.lk"
ADMIN_PASSWORD_HASH="$2b$10$placeholder-change-in-production"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@cycleparadise.lk"
CONTACT_EMAIL="info@cycleparadise.lk"
# Client-safe configuration
PUBLIC_CONTACT_FORM_ENDPOINT="" # Optional: e.g. https://formsubmit.co/ajax/your-email@example.com

# Instagram Integration (Optional)
INSTAGRAM_ACCESS_TOKEN="your-instagram-access-token"
INSTAGRAM_USER_ID="your-instagram-user-id"

# Application Settings
NODE_ENV="development"
PORT="4321"
PUBLIC_SITE_URL="http://localhost:4321"

# Image Optimization
IMAGE_QUALITY="80"
MAX_IMAGE_SIZE="2048"

# Business Configuration
MIN_ADVANCE_BOOKING_DAYS="7"
DEFAULT_PACKAGE_DURATION="7"